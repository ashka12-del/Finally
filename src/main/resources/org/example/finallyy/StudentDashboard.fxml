<AnchorPane prefHeight="720.0" prefWidth="1080.0" style="-fx-background-color: #080808;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.finallyy.StudentDashboardController">
    <children>
        <HBox alignment="CENTER_LEFT" prefHeight="90.0" prefWidth="1080.0" spacing="20.0" style="-fx-background-color: linear-gradient(to right, #161616, #2d1b4e); -fx-border-color: #9c27b0; -fx-border-width: 0 0 2 0;">
            <padding><Insets left="40.0" right="40.0" /></padding>
            <children>
                <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                    <image><Image url="@MIST_Logo_0.png" /></image>
                </ImageView>
                <Text fill="WHITE" text="Student Dashboard">
                    <font><Font name="System Bold" size="28.0" /></font>
                </Text>
                <Region HBox.hgrow="ALWAYS" />
                <HBox alignment="CENTER" spacing="25.0">
                    <children>
                        <StackPane onMouseClicked="#showNotifications" style="-fx-cursor: hand;">
                            <children>
                                <Text fill="#00c6ff" text="ðŸ””"><font><Font size="26.0" /></font></Text>
                                <Circle fill="#ff4757" radius="7.0" translateX="12.0" translateY="-12.0" />
                            </children>
                        </StackPane>
                        <VBox alignment="CENTER_RIGHT">
                            <children>
                                <Label fx:id="studentNameLabel" text="Welcome, Student" textFill="WHITE"><font><Font name="System Bold" size="16.0" /></font></Label>
                                <Label text="Online Status" textFill="#2ecc71"><font><Font name="System Bold" size="11.0" /></font></Label>
                            </children>
                        </VBox>
                        <Button onAction="#handleLogout" prefHeight="38.0" prefWidth="100.0" style="-fx-background-color: #ff4757; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: bold; -fx-cursor: hand;" text="Logout" />
                    </children>
                </HBox>
            </children>
        </HBox>

        <StackPane fx:id="contentPane" layoutY="90.0" prefHeight="630.0" prefWidth="1080.0">
            <children>
                <VBox fx:id="mainHomeBox" alignment="CENTER" spacing="60.0">
                    <children>
                        <Text fill="WHITE" text="Campus Life Portal">
                            <font><Font name="System Bold" size="36.0" /></font>
                        </Text>

                        <HBox alignment="CENTER" spacing="40.0">
                            <children>
                                <VBox fx:id="cardPrint" alignment="CENTER" onMouseClicked="#showPrinterSelection" onMouseEntered="#handleHoverEnter" onMouseExited="#handleHoverExit" prefHeight="300.0" prefWidth="300.0" spacing="20.0" style="-fx-background-color: linear-gradient(to bottom, #2a1a3a, #1a1a1a); -fx-background-radius: 30; -fx-border-color: #9c27b0; -fx-border-radius: 30; -fx-border-width: 2; -fx-cursor: hand;">
                                    <children>
                                        <ImageView fitHeight="90.0" fitWidth="90.0"><image><Image url="@printer_icon.png" /></image></ImageView>
                                        <Text fill="WHITE" text="Smart Printing"><font><Font name="System Bold" size="24.0" /></font></Text>
                                        <Text fill="#b0b0b0" text="Instant Queue &amp; Tokens" />
                                    </children>
                                </VBox>

                                <VBox fx:id="cardHealth" alignment="CENTER" onMouseClicked="#showHealth" onMouseEntered="#handleHoverEnter" onMouseExited="#handleHoverExit" prefHeight="300.0" prefWidth="300.0" spacing="20.0" style="-fx-background-color: linear-gradient(to bottom, #1a2a3a, #1a1a1a); -fx-background-radius: 30; -fx-border-color: #00c6ff; -fx-border-radius: 30; -fx-border-width: 2; -fx-cursor: hand;">
                                    <children>
                                        <ImageView fitHeight="107.0" fitWidth="107.0"><image><Image url="@health_icon.png" /></image></ImageView>
                                        <Text fill="WHITE" text="Health Care"><font><Font name="System Bold" size="24.0" /></font></Text>
                                        <Text fill="#b0b0b0" text="Medical Appointments" />
                                    </children>
                                </VBox>

                                <VBox fx:id="cardMap" alignment="CENTER" onMouseClicked="#showMap" onMouseEntered="#handleHoverEnter" onMouseExited="#handleHoverExit" prefHeight="300.0" prefWidth="300.0" spacing="20.0" style="-fx-background-color: linear-gradient(to bottom, #1a3a2a, #1a1a1a); -fx-background-radius: 30; -fx-border-color: #2ecc71; -fx-border-radius: 30; -fx-border-width: 2; -fx-cursor: hand;">
                                    <children>
                                        <ImageView fitHeight="107.0" fitWidth="107.0"><image><Image url="@map_icon.png" /></image></ImageView>
                                        <Text fill="WHITE" text="Campus Map"><font><Font name="System Bold" size="24.0" /></font></Text>
                                        <Text fill="#b0b0b0" text="Locate Halls &amp; Offices" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <VBox fx:id="printerPane" alignment="CENTER" spacing="30.0" style="-fx-background-color: rgba(0,0,0,0.85);" visible="false">
                    <children>
                        <Button onAction="#backToHome" style="-fx-background-color: #333; -fx-text-fill: white; -fx-background-radius: 15;" text="â¬… Back to Portal" />
                        <HBox alignment="CENTER" spacing="40.0">
                            <children>
                                <VBox alignment="CENTER" prefHeight="320.0" prefWidth="380.0" spacing="20.0" style="-fx-background-color: #1a1a1a; -fx-background-radius: 30; -fx-border-color: #9c27b0; -fx-border-width: 2;">
                                    <children>
                                        <Text fill="WHITE" text="Printer 1 "><font><Font name="System Bold" size="22.0" /></font></Text>
                                        <Label fx:id="printer1Queue" text="Queue: 0 Students" textFill="#00c6ff"><font><Font name="System Bold" size="16.0" /></font></Label>
                                        <Button onAction="#goToPrintConfig1" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: linear-gradient(to right, #9c27b0, #673ab7); -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: bold;" text="Select Printer 1" />
                                    </children>
                                </VBox>
                                <VBox alignment="CENTER" prefHeight="320.0" prefWidth="380.0" spacing="20.0" style="-fx-background-color: #1a1a1a; -fx-background-radius: 30; -fx-border-color: #00c6ff; -fx-border-width: 2;">
                                    <children>
                                        <Text fill="WHITE" text="Printer 2 "><font><Font name="System Bold" size="22.0" /></font></Text>
                                        <Label fx:id="printer2Queue" text="Queue: 0 Students" textFill="#9c27b0"><font><Font name="System Bold" size="16.0" /></font></Label>
                                        <Button onAction="#goToPrintConfig2" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: linear-gradient(to right, #00c6ff, #0072ff); -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: bold;" text="Select Printer 2" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </children>
</AnchorPane>